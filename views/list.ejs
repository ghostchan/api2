<!DOCTYPE html>
<html lang="zh-CN">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- 上述3个meta标签*必须*放在最前面，任何其他内容都*必须*跟随其后！ -->
    <title>mock平台</title>
    <link href="/lib/bootstrap/css/bootstrap.min.css" rel="stylesheet">
    <link href="/lib/toastr/toastr.min.css" rel="stylesheet">
    <link href="/css/list.css" rel="stylesheet">

</head>

<body>
    <div class="container" style="margin-top:50px;width:800px;">
        <div class="page-header">
            <button type="button" class="js_create btn btn-primary btn-lg">新建</button>
        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">接口url</th>
                    <th scope="col">接口描述</th>
                    <th scope="col">操作</th>
                </tr>
            </thead>
            <tbody>
                <% for(var i=0; i<list.length; i++) {%>
                    <tr data-id="<%= list[i].id %>" data-desc="<%= list[i].url_info %>" data-url="<%= list[i].url %>" data-param="<%= list[i].param %>">
                        <td>
                            <%= list[i].url %>
                        </td>
                        <td>
                            <%= list[i].url_info %>
                        </td>
                        <td>
                            <button type="button" class="js_sel btn btn-primary">修改</button>
                            <button type="button" class="js_del btn btn-danger">删除</button>
                        </td>
                    </tr>
                    <% } %>
            </tbody>
        </table>
    </div>
    <div id="selModal" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="gridSystemModalLabel">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                    <h4 class="modal-title" id="modalTitle"></h4>
                </div>
                <div class="modal-body">
                    <form class="form-horizontal" method="post" action="/add">
                        <div class="form-group">
                            <label for="apiurl" class="col-sm-2 control-label">接口url</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="apiurl" name="apiurl" placeholder="接口url">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="desc" class="col-sm-2 control-label">接口描述</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="desc" name="desc" placeholder="接口描述">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="resParam" class="col-sm-2 control-label">响应参数</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="param" rows="20" name="param" style="resize:none;" placeholder="响应参数"></textarea>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">取消</button>
                    <button type="button" class="btn btn-primary js_update" data-id="">保存</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    <!-- /.modal -->

    <script src="lib/jquery-3.2.1.min.js"></script>
    <script src="lib/bootstrap/js/bootstrap.min.js"></script>
    <script src="lib/toastr/toastr.min.js"></script>
    <script type="text/javascript" src="js/list.js"></script>
</body>

</html>